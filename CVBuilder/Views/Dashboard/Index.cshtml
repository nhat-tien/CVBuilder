@model CVBuilder.ViewModels.DashboardViewModel

@{
   Layout = "_DashboardLayout.cshtml";
}

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12 center-content">
                    <div class="new-cv-section">
                        <div class="mb-4">
                            <i class="bi bi-plus-circle" style="font-size: 4rem; color: var(--primary-color);"></i>
                        </div>
                        <h2>Create Your Perfect CV</h2>
                        <p class="text-muted mb-4">Get started by creating a new CV or choose from our professional templates</p>
                        <a asp-controller="Dashboard" asp-action="Create" class="btn btn-primary btn-lg btn-new-cv px-4 py-2">
                            <i class="bi bi-plus-lg me-2"></i>New CV
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent activity section -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            Recent CVs
                        </div>
                        <div class="card-body">
                            <p class="card-text">No recent CVs created.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">View All</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            Quick Stats
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <h5>@Model.TotalCVs</h5>
                                    <small class="text-muted">Total CVs</small>
                                </div>
                                <div class="col-6">
                                    <h5>3</h5>
                                    <small class="text-muted">Templates</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

@section Header {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add active class to current nav item
            $('.nav-link').each(function() {
                if ($(this).attr('href') === window.location.pathname) {
                    $(this).addClass('active');
                }
            });
            
            // Smooth hover effects
            $('.btn-new-cv').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}
