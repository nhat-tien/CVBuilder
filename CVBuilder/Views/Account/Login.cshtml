@{
    Layout = "_AccountLayout";
}

<div class="shadow-box d-flex flex-column bg-white align-items-center justify-content-between" style="width: 100%">
                    <div>
                        <h2 class="mb-5 text-center" style="margin-top: 100px">Đăng nhập</h2>
                        <div class="social-buttons d-flex flex-row gap-1 flex-justify-center">
                            <button class="btn-social">
                                <i class="bi bi-linkedin"></i> LinkedIn
                            </button>
                            <button class="btn-social">
                                <img 
                                    style="width: 20px; height: 20px; transform: translateY(3px); margin-right: 8px;"
                                    src="https://www.gstatic.com/marketing-cms/assets/images/d5/dc/cfe9ce8b4425b410b49b7f2dd3f3/g.webp=s48-fcrop64=1,00000000ffffffff-rw" /> 
                                Goggle
                            </button>
                            <button class="btn-social">
                                 <i class="bi bi-facebook"></i>        
                                 Facebook
                            </button>
                       </div>
                        <div class="my-3 text-center" style="color: var(--text-color-100)">hoặc dùng email của bạn</div>
                       <form asp-action="Login" class="d-flex flex-column gap-3">
                           <div class="form-group text-left form-floating">
                               <input id="email-input" type="text" class="form-control" placeholder="Email" name="Email"  value="">
                               <label for="email-input">Email</label>
                           </div>
                           <div class="form-group text-left form-floating position-relative" x-data="{visible: false}">
                               <input id="password-input" :type="visible ? 'text' : 'password'" class="form-control" placeholder="Mật khẩu" name="Password" value="">
                               <label for="password-input">Mật khẩu</label>
                               <div class="position-absolute top-0 end-0 fs-3" x-on:click="visible = !visible" style="transform: translateY(10px)">
                                   <i x-show="visible" class="bi bi-eye"></i>
                                   <i x-show="!visible" class="bi bi-eye-slash"></i>
                               </div>
                           </div>
                          <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                      </form>
                      </div>
                    <div class="mb-5">
                          <div class="text-center ">
                              <a style="color: var(--icon-color)" href="#">Quên mật khẩu?</a>
                              <div>
                              Người mới?&nbsp;<a style="color: var(--icon-color)" asp-action="Register">Tạo tài khoản</a>
                              </div>
                           </div>
                      </div>
                 </div>
